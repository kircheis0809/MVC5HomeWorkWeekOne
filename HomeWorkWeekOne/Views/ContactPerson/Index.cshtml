@model IEnumerable<HomeWorkWeekOne.Models.客戶聯絡人>

@{
    ViewBag.Title = "客戶聯絡人管理";
}

<h2>客戶聯絡人管理</h2>

<p>
    <input type="button" value="新增" class="pure-button" onclick="location.href='@Url.Action("Create", "ContactPerson")'" />
    <input type="button" value="返回客戶管理" class="pure-button" onclick="location.href='@Url.Action("Index", "Customer")'" />
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="pure-table pure-table-horizontal">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.職稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.姓名)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.手機)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.電話)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.停用)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.職稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.手機)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.停用)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                </td>
                <td>

                    <input type="button" value="編輯" class="button-success pure-button" onclick="location.href='@Url.Action("Edit", "ContactPerson", new { id = item.Id })'" />
                    <input type="button" value="明細" class="button-secondary pure-button" onclick="location.href='@Url.Action("Details", "ContactPerson", new { id = item.Id })'" />
                    <input type="button" value="刪除" class="button-error pure-button" onclick="location.href='@Url.Action("Delete", "ContactPerson", new { id = item.Id })'" />
                </td>
            </tr>
        }
    </tbody>



</table>
