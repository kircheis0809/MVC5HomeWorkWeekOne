@model IEnumerable<HomeWorkWeekOne.Models.客戶銀行資訊>

@{
    ViewBag.Title = "客戶銀行資料管理";
}

<h2>客戶銀行資料管理</h2>

<p>
    <input type="button" value="新增" class="pure-button" onclick="location.href='@Url.Action("Create", "Bank", new { id = Session["CustomerId"] })'" />
    <input type="button" value="返回客戶管理" class="pure-button" onclick="location.href='@Url.Action("Index", "Customer")'" />
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="pure-table pure-table-horizontal">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.銀行名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.銀行代碼)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.分行代碼)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.帳戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.帳戶號碼)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.停用)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.分行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶號碼)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.停用)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                </td>
                <td>
                    <input type="button" value="編輯" class="button-success pure-button" onclick="location.href='@Url.Action("Edit", "Bank", new { id = item.Id })'" />
                    <input type="button" value="明細" class="button-secondary pure-button" onclick="location.href='@Url.Action("Details", "Bank", new { id = item.Id })'" />
                    <input type="button" value="刪除" class="button-error pure-button" onclick="location.href='@Url.Action("Delete", "Bank", new { id = item.Id })'" />
                </td>
            </tr>
        }
    </tbody>



</table>
