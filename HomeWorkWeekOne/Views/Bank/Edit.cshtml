@model HomeWorkWeekOne.Models.客戶銀行資訊

@{
    ViewBag.Title = "客戶銀行資訊編輯";
}

<h2>客戶銀行資訊編輯</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>客戶銀行資訊</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.客戶Id, "客戶Id", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("客戶Id", String.Empty)
                @Html.ValidationMessageFor(model => model.客戶Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.銀行名稱, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.銀行名稱)
                @Html.ValidationMessageFor(model => model.銀行名稱)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.銀行代碼, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.銀行代碼)
                @Html.ValidationMessageFor(model => model.銀行代碼)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.分行代碼, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.分行代碼)
                @Html.ValidationMessageFor(model => model.分行代碼)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.帳戶名稱, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.帳戶名稱)
                @Html.ValidationMessageFor(model => model.帳戶名稱)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.帳戶號碼, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.帳戶號碼)
                @Html.ValidationMessageFor(model => model.帳戶號碼)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.停用, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.停用)
                @Html.ValidationMessageFor(model => model.停用)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="button-warning pure-button" />
                <input type="button" value="返回客戶銀行資訊管理" class="pure-button" onclick="location.href='@Url.Action("Index", "Bank")'" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
